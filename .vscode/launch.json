    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current Tests file",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/pycontrol",
            "module": "pytest",
            "args": [
                "-k",
                "${fileBasename}"
            ]
        }
    ]
}